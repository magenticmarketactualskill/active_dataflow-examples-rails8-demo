<div style="max-width: 600px; margin: 0 auto; padding: 20px;">
  <h1>Edit Data Flow</h1>

  <div style="margin-bottom: 20px;">
    <%= link_to "â† Back to Data Flow", "/active_data_flow/data_flows/#{@data_flow.id}" %>
  </div>

  <%= form_with(model: @data_flow, url: "/active_data_flow/data_flows/#{@data_flow.id}", method: :patch, local: true) do |form| %>
    <% if @data_flow.errors.any? %>
      <div style="background-color: #fee2e2; border: 1px solid #fca5a5; padding: 15px; border-radius: 4px; margin-bottom: 20px;">
        <h3 style="color: #991b1b; margin-top: 0;">
          <%= pluralize(@data_flow.errors.count, "error") %> prohibited this data flow from being saved:
        </h3>
        <ul style="margin: 0; padding-left: 20px;">
          <% @data_flow.errors.full_messages.each do |message| %>
            <li style="color: #991b1b;"><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div style="margin-bottom: 20px;">
      <%= form.label :name, style: "display: block; font-weight: 600; margin-bottom: 5px;" %>
      <%= form.text_field :name, style: "width: 100%; padding: 8px; border: 1px solid #d1d5db; border-radius: 4px;" %>
    </div>

    <div style="margin-bottom: 20px;">
      <%= form.label :status, style: "display: block; font-weight: 600; margin-bottom: 5px;" %>
      <%= form.select :status, [['Active', 'active'], ['Inactive', 'inactive']], {}, style: "width: 100%; padding: 8px; border: 1px solid #d1d5db; border-radius: 4px;" %>
    </div>

    <div style="margin-top: 30px;">
      <%= form.submit "Update Data Flow", style: "background-color: #3182ce; color: white; padding: 10px 20px; border: none; border-radius: 4px; cursor: pointer; font-weight: 600;" %>
      <%= link_to "Cancel", "/active_data_flow/data_flows/#{@data_flow.id}", style: "margin-left: 15px; color: #6b7280;" %>
    </div>
  <% end %>
</div>
